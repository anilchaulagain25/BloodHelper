@model List<BLOOD_HELP.Models.BloodRequest>
@{
Layout = "_Layout";
}
<div class="row" class="text-center" style="margin:15px;">
	<div class="container py-10">
		<div class="row">
			<div class="col-md-10 mx-auto">
				<form asp-controller="AvailableBloodSample" asp-action="Index" method="GET">
					<br>
					<h2>Blood Request Information</h2>
					<br>
                 </form>
                 <br>
					<table class="table">
                        <thead>
                            <th>SN</th>
                            <th>User</th>
                            <th>Blood Group</th>
                            <th>Released Date</th>
                            <th>Request Date</th>
                        </thead>
                        
                        <tbody>
                            @for(int i=0;i<Model.Count;i++){
                            <tr>
                                <td>@(i+1)</td>
                                <td>@Model[i].User</td>
                                <td>@Model[i].BloodGroup</td>
                                <td>@Model[i].ReleaseDate</td>
                                <td>@Model[i].RequestDate</td>
                            </tr>
                            }



                           
                        </tbody>
                    </table>
	
               
            </div>
        </div>
    </div>
</div> 