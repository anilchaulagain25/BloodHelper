
@model BLOOD_HELP.Models.HospitalLoginModel
@{
Layout = "_Layout";
}
<div class="row" class="text-center" style="margin:15px;">
	<div class="container py-5">
		<div class="row">
			<div class="col-md-10 mx-auto">
				<form asp-controller="Hospital" asp-action="Login" method="POST">
					<br>
					<h2>Hospital Login</h2>
					<br>
					@{
					if(ViewBag.result!=null){
					BLOOD_HELP.Models.ResultSet res=ViewBag.result;
					if(res.Success){
					<div class="alert alert-success" role="alert">
						<strong>Well done!</strong> @res.Message
					</div>				
				}
				else{
				<div class="alert alert-danger" role="alert">
					<strong>Oh snap!</strong> @res.Message
				</div>
			}	
		}
	}
	<div class="form-group">
		<label asp-for="Username">Username/Email</label>
		<input type="text" class="form-control" asp-for="Username" placeholder="Username or Email">
		<span asp-validation-for="Username" class="text-danger"></span>

	</div>
	<div class="form-group">
		<label asp-for="Password">Password</label>
		<input type="password" class="form-control" asp-for="Password" placeholder="Password">
		<span asp-validation-for="Password" class="text-danger"></span>

	</div>
	<button type="submit" class="btn btn-primary">Login</button>
	&nbsp;&nbsp;&nbsp;
	<a asp-controller="Hospital" asp-action="Signup">Create Hospital Account</a>
</form>
</div>
</div>
</div>
</div> 