@model BLOOD_HELP.Models.ReceiverModel
@{
Layout = "_Layout";
}
<div class="row" class="text-center" style="margin:15px;">
	<div class="container py-5">
		<div class="row">
			<div class="col-md-10 mx-auto">
				<h2>
					Receiver Signup
				</h2>
				<br>
				<form asp-controller="Receiver" asp-action="Signup" method="POST"> 
					@{
					if(ViewBag.result!=null){
					BLOOD_HELP.Models.ResultSet res=ViewBag.result;
					if(res.Success){
					<div class="alert alert-success" role="alert">
						<strong>Well done!</strong> @res.Message
					</div>				
				}
				else{
				<div class="alert alert-danger" role="alert">
					<strong>Oh snap!</strong> @res.Message
				</div>
			}
		}
	}
	
	<div class="form-group row">
		<div class="col-sm-12">
			<label asp-for="Name">Name</label>
			<input type="text" class="form-control" asp-for="Name" placeholder="Name">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-6">
			<label asp-for="Username">Username</label>
			
			<input type="text" class="form-control" asp-for="Username" placeholder="Username">
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>
		<div class="col-sm-6">
			<label asp-for="Password">Password</label>
			<input type="password" class="form-control" asp-for="Password" placeholder="Password">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-6">
			<label asp-for="ContactNo">Contact No</label>
			<input type="text" class="form-control" asp-for="ContactNo" placeholder="Contact No">
			<span asp-validation-for="ContactNo" class="text-danger"></span>
			
		</div>
		<div class="col-sm-6">
			<label asp-for="Location">Location</label>
			<input type="text" class="form-control" asp-for="Location" placeholder="Location">
			<span asp-validation-for="Location" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-12">
			<label asp-for="Email">Email</label>
			<input type="email" class="form-control" asp-for="Email" placeholder="Email">
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
	</div>
	<button type="submit" class="btn btn-primary px-4">Signup</button>
	&nbsp;&nbsp;&nbsp;
	<a asp-controller="Receiver" asp-action="Login">Login</a>
</form>
</div>
</div>
</div>
</div> 
